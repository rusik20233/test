<Page x:Class="PushToGit.Views.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PushToGit.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignInPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="150">
            <TextBlock Text="Login"/>
            <TextBox x:Name="txbLogins"/>
            <TextBlock Text="Password"/>
            <TextBox x:Name="txbPasswords"/>
            <Button Content="Войти" Click="BtnEnter_Click" />
        </StackPanel>
    </Grid>
</Page>
